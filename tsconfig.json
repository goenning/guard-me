{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "declaration": true,
    "outDir": "build",
    "noEmitHelpers": true,
    "noImplicitAny": false,
    "removeComments": false
  },
  "filesGlob": [
    "**/*.ts",
    "!build"
  ],
  "exclude": [
    "node_modules",
    "build"
  ],
  "files": [
    "lib/Assertion.ts",
    "lib/ExpressionProperty.ts",
    "lib/Guard.ts",
    "lib/index.ts",
    "lib/ValidationContext.ts",
    "lib/ValidationResult.ts",
    "lib/ValidationRule.ts",
    "lib/validators/CustomValidator.ts",
    "lib/validators/EqualValidator.ts",
    "lib/validators/index.ts",
    "lib/validators/LengthValidator.ts",
    "lib/validators/Validator.ts",
    "tests/default.test.ts",
    "tests/object.test.ts",
    "tests/validators/custom.test.ts",
    "tests/validators/equal.test.ts",
    "tests/validators/length.test.ts",
    "tests/validators/testcase.ts",
    "typings/assertion-error/assertion-error.d.ts",
    "typings/chai/chai.d.ts",
    "typings/lodash/lodash.d.ts",
    "typings/mocha/mocha.d.ts",
    "typings/node/node.d.ts",
    "typings/tsd.d.ts"
  ],
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
  "atom": {
    "rewriteTsconfig": true,
    "formatOnSave": true
  }
}
